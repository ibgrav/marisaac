---
import "@/styles/wedding.css";
import { Image } from "astro:assets";
import imageOne from "src/assets/wedding/1.jpg";
import imageTwo from "src/assets/wedding/2.jpg";

const images = [imageOne, imageTwo];
---

<html lang="en" class="w-full bg-cyan-800 text-cyan-900">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Marissa & Isaac Wedding" />

    <title>Marissa & Isaac Wedding</title>

    <link rel="icon" href="/assets/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kurale&family=Lora:ital,wght@0,400..700;1,400..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-lora w-full">
    {
      images.map((image, i) => (
        <Image
          src={image}
          widths={[1200]}
          loading={i === 0 ? "eager" : "lazy"}
          alt="Isaac & Marissa"
          class="fixed w-[100dvw] h-[100dvh] inset-0 object-cover transition-[opacity] duration-1000"
          style={{ opacity: i === 0 ? 100 : 0 }}
        />
      ))
    }

    <section class="flex min-h-[100dvh] flex-col justify-between">
      <h1
        class="p-2 text-6xl text-center drop-shadow-xl text-amber-50"
        style={{ textShadow: "0px 0px 1px #61003e" }}
      >
        Marissa<br />&<br />Isaac
      </h1>

      <div class="card flex flex-col gap-8 text-center">
        <time class="text-4xl" datetime="2025-09-25">
          September 5th, 2025
        </time>

        <div class="flex flex-col gap-2">
          <h2 class="text-2xl">The Wayfarer<br />Whidbey Island</h2>

          <a
            class="text-lg underline underline-offset-4"
            href="https://maps.app.goo.gl/YwcNLH65aYBXEQ4J9"
            target="_blank"
          >
            5491 Bayview Rd, Langley, WA 98260
          </a>
        </div>
      </div>
    </section>

    <section>
      <div class="card">
        <h2 class="text-4xl text-center">Points of Interest</h2>

        <h3>Points of Interest</h3>
        <h3>Points of Interest</h3><h3>Points of Interest</h3><h3>
          Points of Interest
        </h3><h3>Points of Interest</h3><h3>Points of Interest</h3><h3>
          Points of Interest
        </h3><h3>Points of Interest</h3><h3>Points of Interest</h3><h3>
          Points of Interest
        </h3><h3>Points of Interest</h3><h3>Points of Interest</h3><h3>
          Points of Interest
        </h3><h3>Points of Interest</h3><h3>Points of Interest</h3><h3>
          Points of Interest
        </h3><h3>Points of Interest</h3><h3>Points of Interest</h3><h3>
          Points of Interest
        </h3><h3>Points of Interest</h3><h3>Points of Interest</h3><h3>
          Points of Interest
        </h3><h3>Points of Interest</h3>
      </div>
    </section>

    <script>
      const images = document.querySelectorAll("img");

      document.querySelectorAll("section").forEach((section, s) => {
        new IntersectionObserver(
          ([entry]) => {
            if (entry.isIntersecting) {
              images.forEach((image, i) => {
                image.style.opacity = i === s ? "100" : "0";
              });
            }
          },
          { threshold: 0.25 }
        ).observe(section);
      });
    </script>
  </body>
</html>
