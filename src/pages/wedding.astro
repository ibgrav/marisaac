---
import "@/styles/wedding.css";
import { getImage } from "astro:assets";
import imageOneSource from "src/assets/wedding/1.jpg";
import imageTwoSource from "src/assets/wedding/2.jpg";

const imageOne = await getImage({
  src: imageOneSource,
  width: 1200,
});

const imageTwo = await getImage({
  src: imageTwoSource,
  width: 1200,
});
---

<html lang="en" class="w-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Marissa & Isaac Wedding" />

    <title>Marissa & Isaac Wedding</title>

    <link rel="icon" href="/assets/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kurale&family=Lora:ital,wght@0,400..700;1,400..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-lora overflow-hidden w-full animate-fade-in">
    <div class="fixed inset-0 w-full overflow-y-scroll">
      <div
        class="w-full px-2 bg-fixed bg-center bg-no-repeat bg-cover"
        style={{ backgroundImage: `URL(${imageOne.src})` }}
      >
        <h1
          class="pt-[10vh] p-2 text-6xl text-center drop-shadow-xl text-amber-50"
        >
          Marissa<br />&<br />Isaac
        </h1>

        <div class="pt-[40vh] pb-[20vh]">
          <div
            class="px-2 py-6 bg-amber-50 shadow-lg rounded-lg flex flex-col gap-8 text-center opacity-80"
          >
            <time class="text-4xl" datetime="2025-09-25">
              September 5th, 2025
            </time>

            <div>
              <h2 class="text-2xl">The Wayfarer on Whidbey Island</h2>

              <a
                class="text-lg underline underline-offset-4"
                href="https://maps.app.goo.gl/YwcNLH65aYBXEQ4J9"
                target="_blank"
              >
                5491 Bayview Rd, Langley, WA 98260
              </a>
            </div>
          </div>
        </div>
      </div>

      <div
        class="w-full px-2 bg-fixed bg-center bg-no-repeat bg-cover"
        style={{ backgroundImage: `URL(${imageTwo.src})` }}
      >
        <h1
          class="pt-[10vh] p-2 text-6xl text-center drop-shadow-xl text-amber-50"
        >
          Marissa<br />&<br />Isaac
        </h1>

        <div class="pt-[40vh] pb-[20vh]">
          <div
            class="px-2 py-6 bg-amber-50 shadow-lg rounded-lg flex flex-col gap-8 text-center opacity-80"
          >
            <time class="text-4xl" datetime="2025-09-25">
              September 5th, 2025
            </time>

            <div>
              <h2 class="text-2xl">The Wayfarer on Whidbey Island</h2>

              <a
                class="text-lg underline underline-offset-4"
                href="https://maps.app.goo.gl/YwcNLH65aYBXEQ4J9"
                target="_blank"
              >
                5491 Bayview Rd, Langley, WA 98260
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
